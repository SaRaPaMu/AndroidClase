<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_list_item_root_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#F3EDED"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/adapter_list_item_img"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:padding="2dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:id="@+id/adapter_list_item_content_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F7F2F2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_list_item_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:maxLines="3"
            android:text="TextView" />

        <TextView
            android:id="@+id/adapter_list_item_subtitle_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>